<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F7FF">

    <View
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#014488"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Memuat Nama..."
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAdminNip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="NIP: ..."
        android:textColor="#B0C4DE"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:strokeColor="#C5A059"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvAdminNip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Statistik Pengajuan"
                android:textColor="#014488"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <TextView android:id="@+id/tvTotalMasuk" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#014488" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Masuk" android:textSize="10sp" android:textColor="#718096" />
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <TextView android:id="@+id/tvTotalRevisi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#C5A059" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Revisi" android:textSize="10sp" android:textColor="#718096" />
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <TextView android:id="@+id/tvTotalApproved" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#2E7D32" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Disetujui" android:textSize="10sp" android:textColor="#718096" />
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <TextView android:id="@+id/tvTotalRejected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#DC2626" android:textSize="18sp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ditolak" android:textSize="10sp" android:textColor="#718096" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/cardStats">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerifyList"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:backgroundTint="#014488"
            android:fontFamily="@font/poppins_bold"
            android:text="PERIKSA PENGAJUAN"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_assignment" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAllHistory"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:text="RIWAYAT SELURUH PENGAJUAN"
            android:textColor="#014488"
            app:cornerRadius="16dp"
            app:strokeColor="#014488"
            app:icon="@drawable/ic_history" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManageUsers"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:text="MANAJEMEN PENGGUNA"
            android:textColor="#2D3748"
            app:cornerRadius="16dp"
            app:strokeColor="#CBD5E1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="KELUAR APLIKASI"
            android:textColor="#DC2626" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>