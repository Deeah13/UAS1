<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F7FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modernHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_modern"
        android:paddingHorizontal="30dp"
        android:paddingTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Selamat datang di,"
            android:textColor="#B3FFFFFF"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="SIPAKJABAT"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:letterSpacing="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGreeting" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeColor="#C5A059"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/modernHeader"
        app:layout_constraintBottom_toBottomOf="@id/modernHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="4">

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <TextView android:id="@+id/tvTotalMasuk" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#014488" android:textSize="18sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Masuk" android:textSize="10sp" android:textColor="#718096" />
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <TextView android:id="@+id/tvTotalRevisi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#C5A059" android:textSize="18sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Revisi" android:textSize="10sp" android:textColor="#718096" />
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <TextView android:id="@+id/tvTotalApproved" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#2E7D32" android:textSize="18sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Setuju" android:textSize="10sp" android:textColor="#718096" />
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <TextView android:id="@+id/tvTotalRejected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="0" android:textColor="#DC2626" android:textSize="18sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tolak" android:textSize="10sp" android:textColor="#718096" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainLogoTrigger"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="110dp"
        app:cardElevation="16dp"
        app:strokeColor="#C5A059"
        app:strokeWidth="4dp"
        app:layout_constraintBottom_toTopOf="@id/tvFooterAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardStats">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_lingkaran_baru"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMenuProfil"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#C5A059" app:cardCornerRadius="47.5dp" app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger" app:layout_constraintCircleAngle="340" app:layout_constraintCircleRadius="190dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_person" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Profil" android:textColor="#FFFFFF" android:textSize="10sp" android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMenuVerifikasi"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#014488" app:cardCornerRadius="47.5dp" app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger" app:layout_constraintCircleAngle="305" app:layout_constraintCircleRadius="190dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_assignment" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ajuan" android:textColor="#FFFFFF" android:textSize="10sp" android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMenuRiwayat"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#2E7D32" app:cardCornerRadius="47.5dp" app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger" app:layout_constraintCircleAngle="270" app:layout_constraintCircleRadius="190dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_history" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Riwayat" android:textColor="#FFFFFF" android:textSize="10sp" android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMenuUsers"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#6A1B9A" app:cardCornerRadius="47.5dp" app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger" app:layout_constraintCircleAngle="235" app:layout_constraintCircleRadius="190dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_folder" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Master" android:textColor="#FFFFFF" android:textSize="10sp" android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnLogout"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#C62828" app:cardCornerRadius="47.5dp" app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger" app:layout_constraintCircleAngle="200" app:layout_constraintCircleRadius="190dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_logout" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Keluar" android:textColor="#FFFFFF" android:textSize="10sp" android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvFooterAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Â© 2025 SIPAKJABAT - Administrator BPS"
        android:textColor="#718096"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>