<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="#E2E8F0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvJenisDokumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Jenis Dokumen"
                android:textColor="#014488"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNomorDokumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Nomor: -"
                android:textColor="#2D3748"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvTanggalTerbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Tanggal: -"
                android:textColor="#718096"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#A0AEC0"
                android:textSize="11sp"
                android:layout_marginTop="6dp"
                android:fontStyle="italic"
                android:text="Deskripsi dokumen..."
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="#DC2626"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Hapus Dokumen" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>