<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F7FF"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:id="@+id/modernHeader"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_header_modern"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Selamat datang di,"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/modernHeader" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="SIPAKJABAT"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="@id/tvGreeting"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSummaryStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="-35dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeColor="#C5A059"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/modernHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCountPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="0"
                    android:textColor="#014488"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proses"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#718096" />
            </LinearLayout>

            <View android:layout_width="1dp" android:layout_height="20dp" android:layout_gravity="center" android:background="#E2E8F0"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCountDiterima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="0"
                    android:textColor="#2E7D32"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diterima"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#718096" />
            </LinearLayout>

            <View android:layout_width="1dp" android:layout_height="20dp" android:layout_gravity="center" android:background="#E2E8F0"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCountDitolak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="0"
                    android:textColor="#DC2626"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ditolak"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#718096" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainLogoTrigger"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="110dp"
        app:cardElevation="16dp"
        app:strokeColor="#C5A059"
        app:strokeWidth="4dp"
        app:layout_constraintBottom_toTopOf="@id/tvFooterCopyright"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardSummaryStatus">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_lingkaran_baru"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMenuProfil"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#C5A059"
        app:cardCornerRadius="47.5dp"
        app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger"
        app:layout_constraintCircleAngle="22.5"
        app:layout_constraintCircleRadius="180dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_person" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="Profil" android:textColor="#FFFFFF" android:textSize="10sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMenuPengajuan"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#014488"
        app:cardCornerRadius="47.5dp"
        app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger"
        app:layout_constraintCircleAngle="67.5"
        app:layout_constraintCircleRadius="180dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_history" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="Ajuan" android:textColor="#FFFFFF" android:textSize="10sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMenuDokumen"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#2E7D32"
        app:cardCornerRadius="47.5dp"
        app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger"
        app:layout_constraintCircleAngle="112.5"
        app:layout_constraintCircleRadius="180dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_folder" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="Master" android:textColor="#FFFFFF" android:textSize="10sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnLogout"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:alpha="0"
        android:visibility="invisible"
        app:cardBackgroundColor="#C62828"
        app:cardCornerRadius="47.5dp"
        app:cardElevation="12dp"
        app:layout_constraintCircle="@id/mainLogoTrigger"
        app:layout_constraintCircleAngle="157.5"
        app:layout_constraintCircleRadius="180dp"
        tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_logout" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/poppins_bold" android:text="Keluar" android:textColor="#FFFFFF" android:textSize="10sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvFooterCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Â© 2025 SIPAKJABAT - BPS"
        android:textColor="#718096"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>